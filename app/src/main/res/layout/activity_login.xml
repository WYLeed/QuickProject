<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.bsfy.glidemodel.GlideImageView
                android:id="@+id/iv_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="70dp" />

            <TextView
                style="@style/AppTheme.Label.Title.Large"
                android:layout_marginTop="@dimen/dimenPaddingCommon"
                android:text="github"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:padding="10dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_hint_account"
                android:textCursorDrawable="@drawable/bg_edit_normal"
                android:textSize="@dimen/font_30"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="@color/light_white"
                app:met_singleLineEllipsis="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:padding="10dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_hint_password"
                android:textCursorDrawable="@drawable/bg_edit_normal"
                android:textSize="@dimen/font_30"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="@color/light_white"
                app:met_singleLineEllipsis="true" />
        </LinearLayout>


        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_login"
            style="@style/AppTheme.Label.Title"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="15dp"
            android:text="@string/login_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_24"
            app:rv_isRadiusHalfHeight="true"
            app:rv_strokeColor="@android:color/white"
            app:rv_strokeWidth="1dp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>